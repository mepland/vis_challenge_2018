\newenvironment<>{myblock}[1]{%
 \begin{actionenv}#2%
 \def\insertblocktitle{\centering#1}%
 \par%
 % \usebeamertemplate{block begin}\leftskip=14pt\rightskip=14pt\vspace{30pt}} % edit whitespace under each heading
 \usebeamertemplate{block begin}\leftskip=14pt\rightskip=14pt\vspace{22pt}} % edit whitespace under each heading
 {\par\vspace{10pt}\usebeamertemplate{block end}
 \end{actionenv}}

